{
  "name": "node-trainee",
  "version": "0.0.1",
  "description": "Generic Node.js service for training",
  "main": "./build/main.js",
  "author":  "Vlad Kolbaya <vlad.kolbaya@gmail.com> (https://github.com/v1adko)",
  "license": "MIT",
  "contributors": [
    "Burdin Bogdan (https://github.com/burdinbogdan)"
  ],
  "engines": {
    "node": "8.9.0",
    "npm": "5.5.1",
    "yarn": "1.3.2"
  },
  "scripts": {
    "start": "yarn start:development",
    "start:development": "bnr start:development",
    "start:production": "bnr start:production",
    "start:server": "node ./build/main.js",
    "build": "backpack build",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "test": "bnr test",
    "test:watch": "bnr test --watch",
    "test:ci": "bnr test --ci --colors --silent --coverage",
    "prettier": "prettier --write",
    "prettier:all": "prettier \"**/*.js\" --write",
    "precommit": "lint-staged"
  },
  "betterScripts": {
    "start:development": {
      "command": "backpack",
      "env": {
        "NODE_ENV": "development",
        "DB_STRING_CONNECTION": "mongodb://localhost/calendarDB",
        "SECRET_TOKEN_WORD": "secretword",
        "PORT": 8080
      }
    },
    "start:production": {
      "command": "yarn build && yarn start:server",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "command": "jest --runInBand --forceExit",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "yarn lint:fix",
      "git add"
    ]
  },
  "jest":{
    "coverageThreshold": {
      "global": {
        "lines": 90
      }
    }
  },
  "dependencies": {
    "bcryptjs": "2.4.3",
    "body-parser": "1.4.3",
    "express": "4.16.2",
    "http-status-codes": "1.3.0",
    "joi": "13.0.2",
    "jsonwebtoken": "8.1.0",
    "method-override": "2.1.3",
    "mongoose": "4.13.6",
    "morgan": "1.1.1",
    "node-geocoder": "3.21.0",
    "passport": "0.4.0",
    "passport-local": "1.0.0",
    "ramda": "0.25.0",
    "winston": "2.4.0"
  },
  "devDependencies": {
    "babel-eslint": "8.0.2",
    "babel-preset-es2015": "6.24.1",
    "backpack-core": "0.4.3",
    "better-npm-run": "0.1.0",
    "eslint": "4.9.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.4.0",
    "husky": "0.14.3",
    "jest": "21.2.1",
    "lint-staged": "4.3.0",
    "prettier": "1.8.2",
    "supertest": "3.0.0"
  }
}
